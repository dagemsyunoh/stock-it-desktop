<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<HBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lock.stockit.controller.MainController">

    <!-- Sidebar -->
    <VBox fx:id="slider" alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: #5D3FD3;">
        <Button fx:id="menu" alignment="BASELINE_LEFT" graphicTextGap="15.0" style="-fx-background-color: transparent;" text="Menu" textFill="WHITE">
            <graphic>
                <FontIcon iconColor="white" iconLiteral="fas-bars" iconSize="22" />
            </graphic>
        </Button>
        <Button fx:id="home" alignment="BASELINE_LEFT" graphicTextGap="15.0" style="-fx-background-color: transparent;" text="Home" textFill="WHITE">
            <graphic>
                <FontIcon iconColor="white" iconLiteral="fas-home" iconSize="22" />
            </graphic>
        </Button>
        <Button fx:id="receipt" alignment="BASELINE_LEFT" graphicTextGap="15.0" style="-fx-background-color: transparent;" text="Receipt" textFill="WHITE">
            <graphic>
                <FontIcon iconColor="white" iconLiteral="fas-print" iconSize="22" />
            </graphic>
        </Button>
        <Button fx:id="inventory" alignment="BASELINE_LEFT" graphicTextGap="15.0" style="-fx-background-color: transparent;" text="Inventory" textFill="WHITE">
            <graphic>
                <FontIcon iconColor="white" iconLiteral="fas-archive" iconSize="22" />
            </graphic>
        </Button>
        <Button fx:id="more" alignment="BASELINE_LEFT" graphicTextGap="15.0" style="-fx-background-color: transparent;" text="More" textFill="WHITE">
            <graphic>
                <FontIcon iconColor="white" iconLiteral="fas-cogs" iconSize="22" />
            </graphic>
        </Button>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
    </VBox>

    <!-- Content Area -->
    <AnchorPane fx:id="contentArea" style="-fx-background-color: #ECF0F1;" HBox.hgrow="ALWAYS">
        <AnchorPane.topAnchor>0.0</AnchorPane.topAnchor>
        <AnchorPane.bottomAnchor>0.0</AnchorPane.bottomAnchor>
        <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
        <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
    </AnchorPane>
</HBox>
