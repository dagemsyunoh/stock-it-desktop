<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx/17.0.12"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.lock.stockit.LoginController"
          alignment="CENTER"
          hgap="10"
          vgap="15"
          style="-fx-padding: 40; -fx-background-color: #f8f8f8;">

    <!-- Header -->
    <Label text="Sign In"
           GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;"
           GridPane.halignment="CENTER" />

    <!-- Email Field -->
    <Label text="Email:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"
           style="-fx-font-size: 14px;" />
    <TextField fx:id="emailField"
               promptText="Enter your email"
               GridPane.columnIndex="1" GridPane.rowIndex="1"
               style="-fx-pref-width: 200;" />

    <!-- Password Field -->
    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"
           style="-fx-font-size: 14px;" />
    <PasswordField fx:id="passwordField"
                   promptText="Enter your password"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"
                   style="-fx-pref-width: 200;" />

    <!-- Login Button -->
    <Button text="Sign In"
            fx:id="signInButton"
            onAction="#handleLogin"
            GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"
            GridPane.halignment="CENTER"
            style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 8 24; -fx-background-radius: 8;" />

</GridPane>
